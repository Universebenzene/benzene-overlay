<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<maintainer type="person">
		<email>universebenzene@sina.com</email>
		<name>Astro Benzene</name>
	</maintainer>
	<longdescription lang="en">
		A Python interface for the netCDF4 file-format that reads and writes
		local or remote HDF5 files directly via h5py or h5pyd, without
		relying on the Unidata netCDF library.
	</longdescription>
	<upstream>
		<remote-id type="pypi">h5netcdf</remote-id>
		<remote-id type="github">h5netcdf/h5netcdf</remote-id>
	</upstream>
	<use>
		<flag name="h5py">h5py backend support via <pkg>dev-python/h5py</pkg></flag>
		<flag name="h5pyd">h5pyd backend support via <pkg>dev-python/h5py</pkg></flag>
		<flag name="pyfive">pyfive backend support via <pkg>dev-python/pyside</pkg></flag>
	</use>
</pkgmetadata>
